<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Send">

        <SwitchPreference
            android:defaultValue="false"
            android:key="general_sms"
            android:title="SMS" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="general_call"
            android:title="Call" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Other">
        <ListPreference
            android:defaultValue="100"
            android:entries="@array/list_preference_entries"
            android:entryValues="@array/list_preference_entry_values"
            android:key="list_general_full_battery"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Full battery" />
    </PreferenceCategory>



</PreferenceScreen>
