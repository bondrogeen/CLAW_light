<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Key">
        <SwitchPreference
            android:defaultValue="false"
            android:key="general_key"
            android:summary="Send change hardware buttons"
            android:title="Enable" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Wi-Fi">
        <SwitchPreference
            android:defaultValue="false"
            android:key="general_wifi"
            android:summary="Send SSID when connected"
            android:title="Enable" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Messages">
        <SwitchPreference
            android:defaultValue="false"
            android:key="general_sms"
            android:summary="Send information about an incoming message"
            android:title="Enable" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Calls">
        <SwitchPreference
            android:defaultValue="false"
            android:key="general_call"
            android:summary="Send information about an incoming call"
            android:title="Enable" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Battery">
        <SwitchPreference
            android:defaultValue="false"
            android:key="general_battery"
            android:summary="Send battery status"
            android:title="Enable" />
        <ListPreference
            android:defaultValue="100"
            android:entries="@array/list_preference_entries"
            android:entryValues="@array/list_preference_entry_values"
            android:key="list_general_full_battery"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="Set charge completion level"
            android:title="Full battery" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Location">
        <SwitchPreference
            android:defaultValue="false"
            android:key="general_gps"
            android:summary="Send locations"
            android:title="Enable" />
        <ListPreference
            android:defaultValue="300"
            android:entries="@array/list_preference_location_time_entries"
            android:entryValues="@array/list_preference_location_time_values"
            android:key="general_gps_time"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="Data sending period"
            android:title="Interval" />
    </PreferenceCategory>



</PreferenceScreen>
